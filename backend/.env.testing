# Testing Environment Configuration
ENVIRONMENT=testing

# Server Configuration
HOST=localhost
PORT=8001
CORS_ORIGINS=http://localhost:3000
DEBUG=true

# Database Configuration (Use test database)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=legal_ai_test
MONGODB_COLLECTION=documents_test

# AI Configuration (Use cheaper model for testing)
OPENAI_API_KEY=test-key-sk-1234567890
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.5

# JWT Configuration (Use test secrets)
JWT_SECRET_KEY=test-secret-key-for-testing-environment-at-least-32-characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=5
JWT_REFRESH_TOKEN_EXPIRE_DAYS=1

# File Upload Configuration (Smaller limits for testing)
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=.pdf,.txt
STORAGE_DIR=./test_documents_storage

# Email Configuration (Use test email service)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=test
SMTP_PASSWORD=test
EMAIL_FROM=test@clauseiq.test
EMAIL_FROM_NAME=ClauseIQ Test

# Security Configuration
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=5
FRONTEND_URL=http://localhost:3000
