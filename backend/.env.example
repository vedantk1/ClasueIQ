# Backend Environment Variables Template
# Copy this file to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration  
MONGODB_URI=your_mongodb_atlas_connection_string

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (Update with your Vercel domain)
CORS_ORIGINS=https://your-app-name.vercel.app,http://localhost:3000,http://localhost:3001

# Database Configuration
MONGODB_DATABASE=legal_ai
MONGODB_COLLECTION=documents

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf

# Storage Configuration
STORAGE_DIR=./documents_storage

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (Required for Forgot Password functionality)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Legal AI

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
FRONTEND_URL=http://localhost:3000
